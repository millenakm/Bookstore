extends ./../layout

block content
	include ./../navbar.pug
	div.container#carrinho
		h2.titulo-pg Carrinho de compras
		table.table
			thead
				tr
					th
					th Produto
					th Título
					th Valor Unitário
					th Valor Total
					th Quantidade
					th
			tbody
				-for(var i=0; i<dados.length; i++){
					-if(dados[i].carrinho == true){
						tr.isbn.rowTab(data-id=dados[i].isbn)
							td
								img(src="../images/livros/"+dados[i].capa+".jpg", height="100px").box-book
							td= dados[i].isbn
							td= dados[i].titulo
							td R$ #{parseFloat(dados[i].valor).toFixed(2).toString().replace('.',',')}
							td.valor(data-valor=dados[i].valor)
								h4 R$ #{parseFloat(dados[i].valor).toFixed(2).toString().replace('.',',')}
							td(data-estoque=dados[i].estoque)
								span.badge.badge-cart.minus
									i.fa.fa-minus
								span.quantidade 1
								span.badge.badge-cart.plus
									i.fa.fa-plus
							td 
								i.glyphicon.glyphicon-remove.cart.btn-table
					-}
				-}
				tr
					td(align="right", colspan="7").valorTotal 
		button.btn.btn-primary(data-toggle="modal", data-target="#modalConfirm") Comprar

		div#modalConfirm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
			div.modal-dialog(role='document')
				div.modal-content
					div.modal-header
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') &times;
						h4#myModalLabel.modal-title Confirmar compra
					div.modal-body
						table
							thead
								th 
								th
							tbody
								tr
									td Valor da compra: 
									td R$ 0,00
								tr 
									td Valor do frete:
									td ----
								tr
									td Valor Total:
									td R$ 0,00
					div.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
						button.btn.btn-primary#comprar Confirmar Compra

		div#modalMsg.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
			div.modal-dialog(role='document')
				div.modal-content
					div.modal-header
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') &times;
						h4#myModalLabel.modal-title mimimi
					div.modal-body
					div.modal-footer
						a.btn.btn-default(href="/catalogo") Continuar comprando
						a.btn.btn-primary(href="/") Página Inicial
